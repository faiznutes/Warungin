# Application Environment
NODE_ENV=production
PORT=3000

# Frontend & Backend URLs
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api
CORS_ORIGIN=https://your-domain.com

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=warungin

# Database URL (auto-generated from above, or set manually)
DATABASE_URL=postgresql://postgres:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/warungin?schema=public

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHARACTERS_MINIMUM
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_RANDOM_32_CHARACTERS_MINIMUM

# Payment Gateway (Midtrans)
MIDTRANS_MERCHANT_ID=your_merchant_id
MIDTRANS_SERVER_KEY=your_server_key
MIDTRANS_CLIENT_KEY=your_client_key
MIDTRANS_IS_PRODUCTION=false

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Warungin POS <noreply@warungin.com>

# Redis (Optional - enable with profile: with-redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Nginx Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Cloudflare Tunnel (Optional)
# CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token

